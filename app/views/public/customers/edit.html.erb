
<!--顧客の登録情報編集画面-->
<h3>会員情報編集</h3>


 <table>
  <tbody>
  <tr>
	  <th>氏名</th>
	  <th> <%= @customer.last_name+@customer.first_name %></th>
  </tr>
  <tr>
	  <th>フリガナ</th>
	  <th><%= @customer.last_name_kana+@customer.first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th> <%= @customer.postal_code %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th> <%= @customer.address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th> <%= @customer.telephone_number %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th> <%= @customer.email %></th>
  </tr>
 </tbody>
 </table>


 <p><%= link_to '編集内容を保存', customers_infomation_path(@customer.id) %></p>


  <p><%= link_to '退会する', customers_unsubscribe_path(@customer.id) %></p>

