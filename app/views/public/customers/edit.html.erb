
<!--顧客の登録情報編集画面-->
<h3>会員情報編集</h3>

  <%= form_with model: @customer, url:  customers_infomation_path  do |f| %>
 <table>
  <tbody>
  <tr>
	  <th>氏名</th>
	  <th> <%= f.text_field :last_name %><%= f.text_field :first_name %></th>
  </tr>
  <tr>
	  <th>フリガナ</th>
	  <th><%= f.text_field :last_name_kana%><%= f.text_field :first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th> <%= f.text_field :postal_code %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th> <%= f.text_area :address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th> <%= f.telephone_field :telephone_number %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th> <%= f.email_field :email %></th>
  </tr>
 </tbody>
 </table>


 <p><%= f.submit '編集内容を保存' %></p>

 <% end %>


  <p><%= link_to '退会する', customers_unsubscribe_path(@customer.id) %></p>

