<!--注文履歴画面-->
<h3>注文履歴一覧</h3>

<table>
  <thed>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thed>
</table>
<tbody>
  <% @order.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><%= order.item_id %></td>
    <td><%= order.total_payment %></td>
    <td><%= order.atatus %></td>
    <td><%= link_to "表示する", order_path %></td>
  </tr>
  <% end %>
</tbody>