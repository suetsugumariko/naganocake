<!--注文履歴画面-->
<h3>注文履歴一覧</h3>

<table class="table">
  <thed>
    <th scope="col">注文日</th>
    <th scope="col">配送先</th>
    <th scope="col">注文商品</th>
    <th scope="col">支払金額</th>
    <th scope="col">ステータス</th>
    <th scope="col">注文詳細</th>
  </thed>
</table>
<tbody>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><%#= order.item_id %></td>
    <td><%= order.total_payment %></td>
    <td><%= order.status %></td>
    <td><%= link_to "表示する", order_path(order.id) %></td>
  </tr>
  <% end %>
</tbody>