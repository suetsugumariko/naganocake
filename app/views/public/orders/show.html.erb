<!--注文履歴詳細画面-->
<h2>注文履歴詳細</h2>
<table>
  <p>注文情報</p>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @order.created_at %></td>
      <td><%= @order.address %></td>
      <td><%= @order.payment_method %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>

  <table>
  <p>請求情報</p>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.price %></td>
      <td><%= @order.shipping_cost %></td>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>


  <table>
  <p>注文内容</p>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.item_id %></td>
      <td><%= @order.with_tax_price %></td>
      <td><%= @order.amount %></td>
      <td><%= @order.(order.item.price*1.1).floor * order.amount %></td>
    </tr>
  </tbody>