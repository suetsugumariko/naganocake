<h1>Public::Orders#comfirm</h1>
<p>Find me in app/views/public/orders/comfirm.html.erb</p>
<!--注文情報確認画面-->
<h3>注文情報確認</h3>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <!--<th>送料</th>-->
  </thead>
</table>
<tbody>
  <%= @cart_items.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.with_tax_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.subtotal %></td>
    <%#= order_detail.shipping_cost %>

  </tr>
  <% end %>
</tbody>

<table>
  <thead>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求金額</th>
  </thead>
</table>
<tbody>
  <tr>
    <td><%= @order.shipping_cost %></td>

    <%= @total_price.each do |order| %>
    <td><%= order.item.total amount %></td>
    <td><%#= order.item.total_payment %></td>
    <td><%= @total_price += order.shipping_cost %></td>
    <% end %>
  </tr>
</tbody>
<%= form_with model:@cart_items,url:orders_path.new do |f| %>

<p>支払い方法</p>
<%= f.hidden_field :payment_method_i18n, value:@cart_items %>

<p>お届け先</p>
<%= f.text_field :address %>




<%= f.submit "注文を確定する" %>

<% end %>
