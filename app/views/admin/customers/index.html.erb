<!--会員一覧-->
<h1>会員一覧</h1>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th></th>
      <th>氏名</th>

      <th>メールアドレス</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%#= link_to admin_customers_path(customer.id) do %>
        <%# end %>
      </td>
       <td>
       <p><%= customer.id %></p>
      </td>
      <td>
       <p><%= link_to customer.last_name + customer.first_name ,admin_customer_path(customer.id) %></p>

      </td>
       <td>
       <p><%= customer.email %></p>
      </td>
      <td>

        <% if customer.is_deleted %>
         <p>有効</p>
        <% else %>
         <p>退会</p>
        <% end %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
