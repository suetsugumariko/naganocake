<!--管理者トップページ(注文履歴一覧画面)-->
<h3>注文履歴一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
     <td>
        <%= link_to admin_path  %>

      </td>
      <td>
       <p><%= order.created_at %></p>
      </td>
      <td>
       <p><%= order.name %></p>
      </td>
      <td>
       <p><%= order.amount %></p>
      </td>
      <td>
       <p><%= order.status %></p>
      </td>
    </tr>
  </tbody>

    <% end %>
</table>
