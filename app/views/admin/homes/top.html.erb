<!--管理者トップページ(注文履歴一覧画面)-->
<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th></th>
      <th>購入者</th>
      <th></th>
      <th>注文個数</th>
      <th></th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
    <tr>
     <td>
        <%= link_to admin_path(home.id) do %>
        <% end %>
      </td>
      <td>
       <p><%= home.created_at %></p>
      </td>
      <td>
       <p><%= home.name %></p>
      </td>
      <td>
       <p><%= home.amount %></p>
      </td>
      <td>
       <p><%= home.status %></p>
      </td>
    </tr>
  </tbody>
    <% end %>
</table>
