<h1>商品一覧</h1>

<%= link_to "⊕",  new_admin_item_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
       <p><%= item.id %></p>
      </td>
      <td>
       <p><%= item.name %></p>
      </td>
       <td>
       <p><%= item.price %></p>
      </td>
      <td>
       <p><%= item.genre.name %></p>
      </td>
      <td>
       <% if item.is_active %>
         <p>販売中</p>
       <% else %>
         <p>販売停止中</p>
       <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
